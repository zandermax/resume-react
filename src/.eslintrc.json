{
	"extends": "canonical/auto",
	"rules": {
		"import/no-unassigned-import": [
			{
				"allow": ["**/*.css", "**/*.scss", "@fontsource/*"]
			},
			"error"
		],
		"indent": ["error", "tab"],
		"jsonc/indent": ["error", "tab"],
		"prettier/prettier": [
			{
				"useTabs": true
			},
			"error"
		]
	}
}
